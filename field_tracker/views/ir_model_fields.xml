<odoo>

    <record model="ir.ui.view" id="ir_model_field_add_view_tree_trackable">
        <field name="model">ir.model.fields</field>
        <field name="inherit_id" ref="base.view_model_fields_form"/>
        <field name="arch" type="xml">
            <field name="index" position="before">
                <field name="custom_tracker" force_save="1" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="ir_model_fields_view_tree_trackable" model="ir.ui.view">
        <field name="model">ir.model.fields</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="0" delete="0" duplicate="0">
                <field name="trackable" column_invisible="True" force_save="1"/>
                <field name="name" readonly="True"/>
                <field name="field_description" readonly="True"/>
                <field name="ttype" readonly="True"/>
                <field name="custom_tracker" widget="boolean_toggle" string="Tracker"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ir_model_trackable_fields_action">
        <field name="name">Trackable Fields</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ir.model.fields</field>
        <field name="view_mode">tree</field>
        <field name="domain">[("trackable", "=", True), ("model_id", "=", context['active_id'])]</field>
        <field name="view_id" ref="field_tracker.ir_model_fields_view_tree_trackable"/>
    </record>

</odoo>
