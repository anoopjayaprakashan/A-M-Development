<odoo>
    <record id="tracker_ir_model_form" model="ir.ui.view">
        <field name="name">tracker.ir.model.form</field>
        <field name="model">ir.model</field>
        <field name="inherit_id" ref="base.view_model_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group[1]" position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="%(ir_model_trackable_fields_action)d" type="action" class="oe_stat_button" icon="fa-server">
                        <field name="tracked_field_count" widget="statinfo" string="Tracking Fields"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
